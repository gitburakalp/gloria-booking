    <script>
      $('#data-checkin1.datepicker-disabled').change(() => {
        $('#data-checkout1').pickadate('picker').open()
      });

      $('[id*=data-check].datepicker').each(function(){
          $(this).change(function(){
              $(this).siblings().val($(this).val())
          });
      });

      var step = "@(ViewData["Step"].ToString())";

      switch (step.toLowerCase()) {
        case "rooms":
          $("[data-search-step=rooms]").addClass("active");
          break;
        case "transfer":
          $("[data-search-step=transfer]").addClass("active");
          $("[data-search-step=transfer]").prevAll().addClass("is-past");
          break;

        case "guests":
          $("[data-search-step=guest]").addClass("active");
          $("[data-search-step=guest]").prevAll().addClass("is-past");
          break;

        case "checkout":
          $("[data-search-step=payment]").addClass("active");
          $("[data-search-step=payment]").prevAll().addClass("is-past");
          break;

      }

      $('.honeyMoonTrigger #inpHoneyMoon').change(function(e) {
          e.preventDefault();

          $(this).closest("[class*=col-]").siblings().slideToggle();
      })
    </script>

    
