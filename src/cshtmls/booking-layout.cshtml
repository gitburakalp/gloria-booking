    <script>
        function setHotelName(hotelName) {
            var itemKey = "hotelName";

            if (typeof (Storage) !== "undefined") {
                localStorage.setItem(itemKey, hotelName);
            }
        }

        function getHotelName() {
            var itemKey = "hotelName";

            if (typeof (Storage) !== "undefined") {
                return localStorage.getItem(itemKey);
            }
        }
    </script>
